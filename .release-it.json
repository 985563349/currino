{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "npm run test"],
    "after:bump": "npm run build"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "strictSemVer": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "‚ú® Features"
          },
          {
            "type": "fix",
            "section": "üêõ Bug Fixes"
          }
        ]
      }
    }
  }
}
